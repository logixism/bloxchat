{
  "name": "bloxchat",
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.10",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.8",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run @bloxchat/server#start",
    "dev": "turbo run @bloxchat/server#dev @bloxchat/desktop#tauri",
    "desktop:version": "bun run ./scripts/bump-desktop-version.mjs",
    "desktop:build": "cd apps/desktop; bunx tauri build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/node": "^25.3.0",
    "radix-ui": "^1.4.3"
  }
}
